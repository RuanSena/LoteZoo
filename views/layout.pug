doctype html
include includes/icones.pug
html(lang='pt-br')
	head
		block head
			meta(charset='utf-8')
			meta(name='viewport' content='width=device-width, initial-scale=1')
			title= title
			link(rel='icon' type='image/png' href='/images/zoo-favicon.png')
			link(rel='stylesheet' href='/css/bootstrap.min.css')
			link(href="https://fonts.googleapis.com/css?family=Baloo+Da+2|Muli&display=swap" rel="stylesheet")
			link(rel='stylesheet' href='/stylesheets/style.css')
	body.text-body.bg-light
		header
			block header
				nav.navbar.navbar-expand-sm.fixed-top.navbar-dark.bg-dark.mr-auto
					h1.navbar-brand.brand LoteZoo
						small.slogan A loteria do bicho
						a.stretched-link.text-reset(href='/')
					button.navbar-toggler.navbar-banca(type='button' data-toggle='collapse' data-target='#topNav' aria-controls='topNav' aria-expanded='false' aria-label='Procurar menu')
						span.navbar-toggler-icon.navbar-banca-icone
					#topNav.collapse.navbar-collapse.w-100.mt-2.mt-sm-0.mr-sm-2.mr-md-3.mr-lg-5
						.dropdown.ml-auto
							form#procurar(action="" method="post" autocomplete="off" spellcheck="false")
								input#procurar-data(type="hidden" name="data" value="")
								input#procurar-campo.form-control(type='text' value="" placeholder='Extração, banca/grupo...' aria-label='Procurar' data-query='/resultados?searchMap=true')
								#procurar-menu.dropdown-menu.dropdown-procurar.shadow-sm
		main(role='main')
			block content
		footer.bg-dark
			block footer
				.row.no-gutters.justify-content-center.p-2
					blockquote.blockquote.text-center.text-muted.note
						p.m-0 Desenvolvido por 
							a.text-light(href="https://github.com/RuanSena" target="_blank") RuanSena
						block iconesRights
							+citeRights([ ["Freepik", "https://www.flaticon.com/authors/freepik"], ["monkik", "https://www.flaticon.com/authors/monkik"], ["Smashicons", "https://www.flaticon.com/authors/smashicons"], ["photo3idea_studio", "https://www.flaticon.com/authors/photo3idea-studio"] ])
		block scripts
			script(src='/dist/jquery.min.js')
			script(src='/umd/popper.min.js')
			script(src='/js/bootstrap.min.js')
			script(src='/fuse.js')
			script(src='/javascripts/main.js')

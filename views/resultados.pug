extends layout
include includes/sorteio.pug
include includes/premio.pug

block content
	section.jumbotron.text-center.mb-0
		.bancaTitulo
			h2= banca
		.bancaData.mb-3
			form(action="" method="post")
				.form-row
					.col-8.mb-5.mx-auto
						input#data-readonly.banca-data.form-control.mx-auto(type="date" value=data[1] readonly)
					.col-12
						#data.input-group.mx-auto
							.input-group-prepend
								span#data-abbr.data-abbr.input-group-text.bg-light= data[0]
							input#bancaData.banca-data.form-control(type="date" name="data" value=data[1] max=data[2] aria-label='Data do Sorteio' aria-describedby='data-abbr')
							.input-group-append
								button#btnData.btn.btn-outline-primary.bg-dark(type='submit') Buscar
	.container.container-lg.sorteios.bg-light.shadow-lg.pt-4.mt-n4
		if sorteios.length
			.nav-scroller.py-2.mb-2.border-top.border-bottom.border-info
				nav.nav.justify-content-around.pb-0
					each sorteio in sorteios
						.px-2.py-2.text-monospace
							a.px-2.py-1.border.border-secondary.rounded.text-muted.font-weight-bold(href='#'+sorteio.ID)= sorteio.extracao
			.row.no-gutters.row-cols-1.row-cols-md-2.pt-4
				each sorteio in sorteios
					+sorteio(sorteio)

					//- .col.px-0.px-sm-2.px-md-3.mb-3.mb-md-4.mb-lg-5.mx-auto(id=sorteio.ID)
